                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="hidden" id="hfRoleId" value="0" />
                                    <label>Role</label>
                                    <span class="text-danger">*</span>
                                    <input type="text" placeholder="Enter Name" class="form-control" id="txtRoleName" readonly required>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="datatable-scroll-wrap">
                            <table class="table datatable-button-html5-columns" id="tblMenumaster">
                                <thead>
                                    <tr>
                                        <th>Menu</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                </tfoot>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center bg-info border-top-0">
                    <button type="button" class="btn bg-transparent text-white border-white border-2" data-dismiss="modal" onclick="CloseModal()">Close</button>
