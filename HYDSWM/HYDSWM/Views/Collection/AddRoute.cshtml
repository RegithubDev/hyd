<div class="content pt-0">


    <!-- /page header -->

    <div class="card mt-1 mr-2">
        <div class="card-header header-elements-inline pt-0 pb-0">
            <div class="page-title d-flex mt-4">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold" id="spnHeader">All Route </span> Information</h4>&nbsp;

            </div>

            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
        <div class="card-body">

            <div class="row">

                <form class="form-validate-jquery" onsubmit="return Formsubmit();" name="registration">
                    <div id="user_content" class="form-body">

                        <fieldset>
                            <legend class="bg-info">Route Details</legend>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="hidden" id="hfRouteId" />
                                            <label>Route Name</label>
                                            <span class="text-danger">*</span>
                                            <input type="text" placeholder="Enter Route Name" class="form-control" id="txtRouteName" required>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label>Route Code</label>
                                        <input type="text" placeholder="Route Code" class="form-control" id="txtRouteCode" readonly="true">
                                    </div>
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-check">

                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" id="ckbIsActive">
                                                Is Active
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </fieldset>
                        <br />
                        <fieldset>
                            <legend class="bg-info">Trip Details</legend>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label>Trip</label>
                                        <span class="text-danger">*</span>
                                        <select id="ddlMTrip"
                                                class="form-control">
                                            <option value="">Select</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-3">
                                        <label>Vehicle No</label>
                                        <span class="text-danger">*</span>
                                        <select id="ddlVehicleNo"
                                                class="form-control form-control-select2" required>
                                            <option value="">Select</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-3">
                                        <label>Buffer Min</label>
                                        <span class="text-danger">*</span>
                                        <input type="text" value="15" placeholder="Buffer Min" onpaste="return false;" onCopy="return false" onCut="return false" onDrag="return false" onDrop="return false" onselectstart="return false" autocomplete="off" onkeypress="return isNumberKey(this, event);" class="form-control" id="txtBufferMin">
                                    </div>
                                    <div class="col-sm-3">
                                        <br />
                                        <button type="button" id="btnAddTrip" class="
                          justify-content-center
                          w-60
                          btn btn-rounded btn-light-success
                          text-success
                          font-weight-medium
                          d-flex
                          align-items-center
                        " onclick="AddTrips();">
                                            <i class="icon-add"></i> Add
                                        </button>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="card card-table table-responsive shadow-0 mb-0">
                                    <table id="tblTrip" class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Trip</th>
                                                <th>Vehicle No</th>
                                                <th>Buffer Min</th>
                                                <th>Remove</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </fieldset>
                        <br />
                        <fieldset>
                            <legend class="bg-info">Geo Point Details</legend>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label>Geo Point</label>
                                        <span class="text-danger">*</span>
                                        <select id="ddlStop"
                                                class="form-control form-control-select2">
                                            <option value="">Select</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-3">
                                        <label>Pickup Time</label>
                                        <span class="text-danger">*</span>
                                        <input type="time" placeholder="Pickup Time" class="form-control" id="txtPickupTime">
                                    </div>
                                    <div class="col-sm-3">
                                        <label>Trip </label>
                                        <span class="text-danger">*</span>
                                        <select id="ddlTrip"
                                                class="form-control">
                                            <option value="">Select</option>
                                        </select>
                                    </div>
                                    @* <div class="col-sm-3">
                                        <label>Arrival Time</label>
                                        <span class="text-danger">*</span>
                                        <input type="time" placeholder="Arrival Time" class="form-control" id="txtSArrvlTime">
                                        </div>
                                        <div class="col-sm-3">
                                        <label>Departure Time</label>
                                        <span class="text-danger">*</span>
                                        <input type="time" placeholder="Departure Time" class="form-control" id="txtSDeptTime">
                                        </div>*@
                                    <div class="col-sm-3">
                                        <br />
                                        <button type="button" id="btnAddStop" class="
                          justify-content-center
                          w-60
                          btn btn-rounded btn-light-success
                          text-success
                          font-weight-medium
                          d-flex
                          align-items-center
                        " onclick="AddStops();">
                                            <i class="icon-add"></i> Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="card card-table table-responsive shadow-0 mb-0">
                                    <table id="tblStop" class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Geo Point</th>
                                                <th>Pickup Time</th>
                                                <th>Trip</th>
                                                <th>Remove</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </fieldset>

                    </div>

                    <div class="form-actions">

                        <div class="text-end">
                            <button type="submit" class="
                            btn btn-light-info
                            text-info
                            font-weight-medium
                          ">
                                Submit
                            </button>
                            <button type="reset" onclick="goBack();" class="
                            btn btn-light-danger
                            text-danger
                            font-weight-medium
                          ">
                                Cancel
                            </button>
                        </div>

                    </div>
                </form>

            </div>
        </div>



    </div>

</div>

