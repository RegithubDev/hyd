<div class="content pt-0">


    <!-- /page header -->

    <div class="card mt-1 mr-2">
        <div class="card-header header-elements-inline pt-0 pb-0">
            <div class="page-title d-flex mt-4">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold" id="spnHeader">Assign Vehicle To Trip </span> Information</h4>&nbsp;

            </div>

            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
        <div class="card-body">

            <div class="row">

                <form class="form-validate-jquery" onsubmit="return Formsubmit();" name="registration">
                    <div id="user_content" class="form-body">


                       <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label>Route Code</label>
                                    <input type="hidden" id="hfRouteId" />
                                    <input type="text" placeholder="Route Code" class="form-control" id="txtRouteCode" readonly="true">
                                </div>
                               
                                 <div class="col-sm-4">
                                    <label>Route Trip Code </label>
                                     <input type="hidden" id="hfTripId" />
                                    <input type="hidden" id="hfRTDId" />
                                    <input type="text" placeholder="Trip Id" class="form-control" id="txtTripUId" readonly="true">
                                </div>

                                <div class="col-sm-4">
                                    <label>Vehicle No</label>
                                    <span class="text-danger">*</span>
                                    <select id="ddlVehicleNo" required
                                           class="form-control form-control-select2"  style="width: 100%; height: 36px">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                       

                        

                    </div>

                    <div class="form-actions">

                        <div class="text-end">
                            <button type="submit" class="
                            btn btn-light-info
                            text-info
                            font-weight-medium
                          ">
                                Submit
                            </button>
                            <button type="reset" onclick="goBack();" class="
                            btn btn-light-danger
                            text-danger
                            font-weight-medium
                          ">
                                Cancel
                            </button>
                        </div>

                    </div>
                </form>

            </div>
        </div>



    </div>

