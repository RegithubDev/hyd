@{
    ViewData["Title"] = "Add Trip Point";
    Layout = "~/Views/Shared/_MonsterLayout.cshtml";
}


<div class="page-header border-bottom-0">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-md-5 align-self-center">
            </div>
            <div class="
                col-md-7
                justify-content-end
                align-self-center
                d-none d-md-flex
              ">
            </div>
        </div>
    </div>
</div>
<div class="content pt-0">


    <!-- /page header -->

    <div class="card mt-1 mr-2">
        <div class="card-header header-elements-inline pt-0 pb-0">
            <div class="page-title d-flex mt-4">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold" id="spnHeader">Add Trip Points</span> Information</h4>&nbsp;

            </div>

            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
        <div class="card-body">

            <div class="row">

                <form class="form-validate-jquery" onsubmit="return Formsubmit();" name="registration">
                    <div id="user_content" class="form-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label>Route Code</label>
                                    <input type="hidden" id="hfRouteId" />
                                    <input type="text" placeholder="Route Code" class="form-control" id="txtRouteCode" readonly="true">
                                </div>
                                @* <div class="col-sm-4">
                                    <label>Trip</label>

                                    <input type="text" class="form-control" id="txtTrip" readonly="true">
                                    </div>*@
                                <div class="col-sm-2">
                                    <label>Route Trip Code </label>
                                    <input type="hidden" id="hfCircleId" />
                                    <input type="hidden" id="hfZoneId" />
                                    <input type="hidden" id="hfTripId" />
                                    <input type="hidden" id="hfVehicleUIdId" />
                                    <input type="hidden" id="hfBufferMinId" />
                                    <input type="hidden" id="hfShiftId" />
                                    <input type="text" placeholder="Trip Id" class="form-control" id="txtTripUId" readonly="true">
                                </div>
                                <div class="col-sm-2">
                                    <label>Zone</label>
                                    <input type="text" class="form-control" id="txtZone" readonly="true">
                                </div>
                                <div class="col-sm-2">
                                    <label>Circle</label>
                                    <input type="text" class="form-control" id="txtCircle" readonly="true">
                                </div>
                                 <div class="col-sm-2">
                                   <label>Shift Name</label>
                                    <input type="text" class="form-control" id="txtShiftName" readonly="true">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>Ward</label>
                                    <span class="text-danger">*</span>
                                    <select id="ddlWard" onchange="CallAllGeoPointByZoneLst();"
                                            class="form-control">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label>Category</label>
                                    <span class="text-danger">*</span>
                                    <select id="ddlCatgory" onchange="CallAllGeoPointByZoneLst();"
                                            class="form-control">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label>Geo Point</label>
                                    <span class="text-danger">*</span>
                                    <select id="ddlStop"
                                            class="form-control form-control-select2" style="width: 100%; height: 36px">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label>Pickup Time</label>
                                    <span class="text-danger">*</span>
                                    <input type="time" placeholder="Pickup Time" class="form-control" id="txtPickupTime">
                                </div>
                                <div class="col-sm-3" id="dvAddTrip">
                                    <br />
                                    <button type="button" id="btnAddTrip" class="
                          justify-content-center
                          w-60
                          btn btn-rounded btn-light-success
                          text-success
                          font-weight-medium
                          d-flex
                          align-items-center
                        " onclick="AddStops();">
                                        <i class="icon-add"></i> Add
                                    </button>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="card card-table table-responsive shadow-0 mb-0">
                                <table id="tblStop" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>[IDNo] - Point Name</th>
                                            <th>Point Category</th>
                                            <th>Pickup Time</th>
                                            <th>Route Trip Code</th>
                                            <th>Remove</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="border-bottom title-part-padding">
                                    <h4 class="card-title mb-0">Map View</h4>
                                </div>
                                <div class="card-body">
                                    <div id="map_basic" style="height: 350px"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions" id="dvSubmit">

                        <div class="text-end">
                            <button type="submit" class="
                            btn btn-light-info
                            text-info
                            font-weight-medium
                          ">
                                Submit
                            </button>
                            <button type="reset" onclick="goBack();" class="
                            btn btn-light-danger
                            text-danger
                            font-weight-medium
                          ">
                                Cancel
                            </button>
                        </div>

                    </div>
                </form>

            </div>




        </div>



    </div>

</div>

<!-- Vertical form modal -->
<div id="dvEditModal" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Edit Points Information</h3>
                <button type="button" class="close" data-dismiss="modal" onclick="CloseModal()">&times;</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <label>Pickup Time</label>
                            <span class="text-danger">*</span>
                            <input type="hidden" id="hfIPointId" value="0" />
                            <input type="hidden" id="hfILat" value="" />
                            <input type="hidden" id="hfILng" value="" />
                            <input type="hidden" id="hfIPCatId" value="0" />
                            <input type="hidden" id="hfIPWardId" value="0" />
                            <input type="time" placeholder="Pickup Time" class="form-control" id="txtEPickupTime">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center bg-info border-top-0">
                <button type="button" class="btn bg-transparent text-white border-white border-2" data-dismiss="modal" onclick="CloseModal()">Close</button>
                <button type="submit" class="btn btn-outline bg-white text-white border-white border-2">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
    </div>

</div>
<!-- /vertical form modal -->

<script>
    function CloseModal() {
        $(".modal").modal('hide');
    }
</script>

