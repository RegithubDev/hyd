    .st {
        width: 2em;
        height: 2em;
        text-align: center;
        line-height: 2em;
        border-radius: 1em;
        background: dodgerblue;
        margin: 0 1em;
        display: inline-block;
        color: white;
        position: relative;
    }

        .st::before {
            content: '';
            position: absolute;
            top: .9em;
            left: -4em;
            width: 4em;
            height: .2em;
            background: dodgerblue;
            opacity: 0.3;
        }

        .st:first-child::before {
            display: none;
        }

    div.scroll {
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
    }
